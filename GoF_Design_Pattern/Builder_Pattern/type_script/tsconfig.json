{ 
    "compilerOptions": { 
        "target": "ES2020", 
        "module": "commonjs", 
        "allowJs": true, 
        "checkJs": true,
        "outDir": "./dist",
        "strict": true, 
        "removeComments": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "esModuleInterop": true,
        "skipLibCheck": true, 
        "forceConsistentCasingInFileNames": true
    }, 
    "include": ["./src/*"], 
    "$schema": "https://json.schemastore.org/tsconfig", 
    "display": "Recommended" 
} 
